    <form:datasource xsi:type="form:TreeDataSource" id="orgUserTree" name="机构用户树型数据源" impl="com.chinacreator.asp.sysmgmt.sysset.rolemgt.RoleOrgUserTreeContentProviderImpl" type="custom"/>
