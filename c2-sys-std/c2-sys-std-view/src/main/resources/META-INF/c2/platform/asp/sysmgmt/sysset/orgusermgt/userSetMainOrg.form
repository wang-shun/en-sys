  </form:datasources>
  <form:scripts>// 保存&#xD;
saveMainOrg:function(){&#xD;
	var userIds = $params.userIds;&#xD;
	if(angular.isUndefined(userIds) &amp;&amp; userIds.length>0){&#xD;
		Messenger.post({&#xD;
		    'message': &quot;请选择需要设置主机构的用户！&quot;,&#xD;
		    'type': 'error',&#xD;
		});&#xD;
		return;&#xD;
	}&#xD;
	&#xD;
	var selectNodes = $view.mainOrgTree.getCheckedNodes(true);&#xD;
	var _this = this;&#xD;
	if(angular.isArray(selectNodes) &amp;&amp; selectNodes.length==1){&#xD;
		$http.post(&quot;ws/userSetMainOrg&quot;,{&quot;userIds&quot;:userIds,&quot;orgId&quot;:selectNodes[0].id,&quot;isRetain&quot;:$model.isRetain})&#xD;
				.success(function(data, status, headers, config){&#xD;
					Messenger.post({&#xD;
		                'message': &quot;设置主机构成功！&quot;,&#xD;
		                'type': 'success',&#xD;
		            });&#xD;
		            if($model.isAdvancedSetFold){&#xD;
		            	_this.advancedSet();&#xD;
		            }else{	           &#xD;
		            	_this.resetMainOrgTree();&#xD;
		            }&#xD;
		            $scope.saveType = 'success';&#xD;
		            _this.closeModal();&#xD;
				});&#xD;
	}else{&#xD;
		Messenger.post({&#xD;
		    'message': &quot;请选择需要设置的主机构！&quot;,&#xD;
		    'type': 'error',&#xD;
		});&#xD;
		return;&#xD;
	}	&#xD;
},&#xD;
// 高级设置&#xD;
advancedSet:function(){&#xD;
	$model.isRetain = true;		&#xD;
	$model.isAdvancedSetFold = true;&#xD;
	$view.mainOrgTree.refresh(false,null,{&quot;userIds&quot;:$params.userIds,&quot;isAdvancedSet&quot;:&quot;true&quot;});&#xD;
},&#xD;
// 重置&#xD;
resetMainOrgTree:function(){	&#xD;
	$model.isRetain = true;&#xD;
	$model.isAdvancedSetFold = false;&#xD;
	$view.mainOrgTree.refresh(false,null,{&quot;userIds&quot;:$params.userIds,&quot;isAdvancedSet&quot;:&quot;false&quot;});&#xD;
},&#xD;
// 关闭&#xD;
closeModal:function(){&#xD;
	Modal.instance.close($scope.saveType);&#xD;
},
// 页面加载完成事件
page_onload:function(){	&#xD;
	$model.hr = &quot;&lt;hr/>&quot;;&#xD;
	$model.isAdvancedSetFold = false;&#xD;
	$model.isRetain = true;
}</form:scripts>
