  <form:scripts>// 页面加载完成事件&#xD;
page_onload:function(){&#xD;
	$model.hr = &quot;&lt;hr/>&quot;;	&#xD;
},&#xD;
// 保存&#xD;
save:function(){&#xD;
	var jobIds = $params.jobIds;&#xD;
	if(angular.isUndefined(jobIds) &amp;&amp; jobIds.length>0){&#xD;
		Messenger.post({&#xD;
		    'message': &quot;请选择需要设置权限的岗位！&quot;,&#xD;
		    'type': 'error',&#xD;
		});&#xD;
		return;&#xD;
	}&#xD;
	&#xD;
	var resTreeNodeChecded = $model.resTreeNodeChecded;&#xD;
	var presetId = $model.presetId;&#xD;
	if(angular.isUndefined(presetId)){&#xD;
		presetId = &quot;&quot;;&#xD;
	}&#xD;
	&#xD;
	if(angular.isUndefined(resTreeNodeChecded) &amp;&amp; (angular.isUndefined(presetId) || presetId==&quot;&quot; )){&#xD;
		Messenger.post({&#xD;
		    'message': &quot;权限勾选没有变化，请选择需要设置的权限！&quot;,&#xD;
		    'type': 'error',&#xD;
		});&#xD;
		return;&#xD;
	}&#xD;
	&#xD;
	var isEmpty = true;&#xD;
	var addResIds = [];&#xD;
	var delResIds = [];&#xD;
	var addResNames = &quot;&quot;;&#xD;
	var delResNames = &quot;&quot;; 	&#xD;
	angular.forEach(resTreeNodeChecded, function (value, key) {&#xD;
		if(value.resChecked){&#xD;
			addResIds.push(value.id);&#xD;
			addResNames += value.name + &quot;,&quot;;&#xD;
		}else{&#xD;
			delResIds.push(value.id);&#xD;
			delResNames += value.name + &quot;,&quot;;&#xD;
		}&#xD;
		if(isEmpty){&#xD;
			isEmpty = false;&#xD;
		}&#xD;
    });	&#xD;
	&#xD;
	if(isEmpty &amp;&amp; (angular.isUndefined(presetId) || presetId==&quot;&quot; )){&#xD;
    	Messenger.post({&#xD;
		    'message': &quot;权限勾选没有变化，请选择需要设置的权限！&quot;,&#xD;
		    'type': 'error',&#xD;
		});&#xD;
		return;&#xD;
    }&#xD;
    var _this = this;&#xD;
	$http.post(&quot;ws/jobSetRes&quot;,{&quot;jobIds&quot;:jobIds,&quot;presetId&quot;:presetId,&quot;addResIds&quot;:addResIds,&quot;delResIds&quot;:delResIds})&#xD;
			.success(function(data, status, headers, config){&#xD;
				Messenger.post({&#xD;
	                'message': &quot;设置权限成功！&quot;,&#xD;
	                'type': 'success',&#xD;
	            });&#xD;
				$scope.saveType = 'success';	           &#xD;
	            _this.reset();&#xD;
			});&#xD;
},&#xD;
// 回收&#xD;
removeRes:function(){&#xD;
	var jobIds = $params.jobIds;&#xD;
	if(angular.isUndefined(jobIds) &amp;&amp; jobIds.length>0){&#xD;
		Messenger.post({&#xD;
		    'message': &quot;请选择需要回收权限的岗位！&quot;,&#xD;
		    'type': 'error',&#xD;
		});&#xD;
		return;&#xD;
	}&#xD;
	&#xD;
	var _this = this;&#xD;
	Modal.openConfirm({message:&quot;是否确认回收岗位设置的所有权限?&lt;br>待回收权限的岗位：&quot;+$params.jobNames},function(){&#xD;
		$http.post(&quot;ws/jobRevokeAllRes&quot;,{&quot;jobIds&quot;:jobIds})&#xD;
				.success(function(data, status, headers, config){&#xD;
					Messenger.post({&#xD;
		                'message': &quot;回收权限成功！&quot;,&#xD;
		                'type': 'success',&#xD;
		            });&#xD;
		            $scope.saveType = 'success';	           &#xD;
		            _this.reset();		           &#xD;
				});&#xD;
	});&#xD;
},&#xD;
// 重置&#xD;
reset:function(){	&#xD;
	$model.resTreeNodeChecded = {};&#xD;
	var presetId = $model.presetId;&#xD;
	if(angular.isUndefined(presetId) || presetId==&quot;&quot;){&#xD;
		$view.resTree.refresh2({&quot;jobIds&quot;:$params.jobIds},true,false,false);&#xD;
	}else{&#xD;
		$model.presetId = &quot;&quot;;&#xD;
	}&#xD;
},&#xD;
// 关闭&#xD;
closeModal:function(){	&#xD;
	Modal.instance.close($scope.saveType);&#xD;
},&#xD;
// 勾选事件&#xD;
resTree_nodeCheck:function(event,treeId,treeNode){
	var resTreeNodeChecded = $model.resTreeNodeChecded;&#xD;
	&#xD;
	if(angular.isUndefined(resTreeNodeChecded)){&#xD;
		resTreeNodeChecded = {};&#xD;
	}&#xD;
	var resId = treeNode.privilegeId;&#xD;
	var resName = treeNode.name;&#xD;
	var resChecked = treeNode.checked;&#xD;
	&#xD;
	if(treeNode.checkedOld==treeNode.checked){&#xD;
		delete resTreeNodeChecded[resId];&#xD;
	}else{		&#xD;
		resTreeNodeChecded[resId] = {&quot;id&quot;:resId,&quot;name&quot;:resName,&quot;resChecked&quot;:resChecked};&#xD;
	}&#xD;
	$model.resTreeNodeChecded = resTreeNodeChecded;
},
// 预定义值改变
preset_Field_change:function(newValue,oldValue){
	$model.resTreeNodeChecded = {};&#xD;
	$view.resTree.refresh2({&quot;jobIds&quot;:$params.jobIds,&quot;presetId&quot;:newValue},true,false,false);
}</form:scripts>
</form:Form>
