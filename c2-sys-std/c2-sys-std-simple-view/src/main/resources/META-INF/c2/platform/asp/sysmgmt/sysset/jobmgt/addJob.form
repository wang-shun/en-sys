  <form:scripts>// 保存&#xD;
saveJob:function(){&#xD;
	if(this.validateForm() &amp;&amp; $view.mainForm.check()){&#xD;
		var _this = this;&#xD;
		if('add'==$params.type){&#xD;
			var orgId = $model.orgId;&#xD;
			if(&quot;-1&quot;==orgId){&#xD;
				$model.job.result.jobScope = &quot;0&quot;;&#xD;
			}else{&#xD;
				$model.job.result.jobScope = &quot;1&quot;;&#xD;
			}&#xD;
			&#xD;
			var resTreeNodeChecded = $model.resTreeNodeChecded;&#xD;
			var presetId = $model.presetId;&#xD;
			if(angular.isUndefined(presetId)){&#xD;
				presetId = &quot;&quot;;&#xD;
			}&#xD;
			&#xD;
			var addResIds = [];&#xD;
			var delResIds = [];&#xD;
			if(!angular.isUndefined(resTreeNodeChecded)){&#xD;
				angular.forEach(resTreeNodeChecded, function (value, key) {&#xD;
					if(value.resChecked){&#xD;
						addResIds.push(value.id);&#xD;
					}else{&#xD;
						delResIds.push(value.id);&#xD;
					}&#xD;
			    });	&#xD;
			}&#xD;
			$http.post(&quot;ws/addJob&quot;,{jobDTO:$model.job.result,&quot;orgId&quot;:orgId,&quot;presetId&quot;:presetId,&quot;addResIds&quot;:addResIds,&quot;delResIds&quot;:delResIds})&#xD;
					.success(function(data, status, headers, config){&#xD;
						Messenger.post({&#xD;
			                'message': &quot;新增岗位成功！&quot;,&#xD;
			                'type': 'success',&#xD;
			            });&#xD;
			            $scope.saveType = 'success';&#xD;
			            _this.closeModal();&#xD;
					});&#xD;
		}else{&#xD;
			Messenger.post({&#xD;
	                'message': &quot;参数不正确！&quot;+$params.type,&#xD;
	                'type': 'error',&#xD;
	            });&#xD;
		}&#xD;
	}else{&#xD;
		Messenger.post({&#xD;
            'message': &quot;保存失败！验证未通过！&quot;,&#xD;
            'type': 'error',&#xD;
        });&#xD;
	}&#xD;
},&#xD;
// 重置&#xD;
resetJob:function(){&#xD;
	$view.mainForm.clean();&#xD;
	$model.job.$reload();&#xD;
	this.page_beforeDataSourceLoad();&#xD;
	$model.validataJson = {};&#xD;
	$model.resTreeNodeChecded = {};&#xD;
	var presetId = $model.presetId;&#xD;
	if(angular.isUndefined(presetId) || presetId==&quot;&quot;){&#xD;
		$view.resTree.refresh2({&quot;jobIds&quot;:$params.jobIds},true,false,false);&#xD;
	}else{&#xD;
		$model.presetId = &quot;&quot;;&#xD;
	}&#xD;
},&#xD;
// 关闭&#xD;
closeModal:function(){&#xD;
	Modal.instance.close($scope.saveType);&#xD;
},&#xD;
// 失去焦点事件(验证唯一)&#xD;
element_blur:function($event){	&#xD;
	var elementId = $event.currentTarget.id;&#xD;
	if(!$view[elementId].check()){&#xD;
		return;&#xD;
	}	&#xD;
	var elementValue = $event.currentTarget.value;&#xD;
	var validataJson = $model.validataJson;	&#xD;
	if(angular.isUndefined(validataJson)){&#xD;
		validataJson = {};&#xD;
	}&#xD;
	var jobId = $model.job.result.jobId;&#xD;
	if(angular.isUndefined(jobId)){&#xD;
		jobId = &quot;&quot;;&#xD;
	}&#xD;
	$http.post(&quot;ws/validateFormByJob&quot;,{&quot;elementId&quot;:elementId,&quot;elementValue&quot;:elementValue,&quot;formType&quot;:$params.type,&quot;orgId&quot;:$model.orgId,&quot;jobId&quot;:jobId})&#xD;
			.success(function(data, status, headers, config){&#xD;
				if(!angular.isUndefined(data) &amp;&amp; !angular.isUndefined(data.result)){&#xD;
					validataJson[elementId] = data.result.validate;&#xD;
					$model.validataJson = validataJson;&#xD;
					if(&quot;error&quot;==data.result.validate){					&#xD;
						$view[elementId].setTipMessage(data.result.errmess);&#xD;
					}			&#xD;
				}&#xD;
			});&#xD;
},&#xD;
// 验证表单(验证唯一)&#xD;
validateForm:function(){&#xD;
	var validataJson = $model.validataJson;&#xD;
	if(!angular.isUndefined(validataJson)){&#xD;
		for(var key in validataJson){  &#xD;
	        if(&quot;error&quot;==validataJson[key]){	        	&#xD;
	        	return false;&#xD;
	        }&#xD;
		}&#xD;
	}	  &#xD;
    return true;&#xD;
},

orgId_beforeClick:function(treeId,treeNode,clickFlag){
	if(treeNode.id=='0'){&#xD;
		return false;&#xD;
	}&#xD;
	return true;
},

page_beforeDataSourceLoad:function(){&#xD;
	if('add'==$params.type){
		var orgId = $params.orgId;	&#xD;
		if(!angular.isUndefined(orgId) &amp;&amp; orgId!=&quot;&quot;  &amp;&amp; orgId!=&quot;0&quot;){&#xD;
			$model.orgId = orgId;&#xD;
		}&#xD;
	}
},

page_onload:function(){
	$model.hr = &quot;&lt;hr/>&quot;;&#xD;
},
// 勾选事件
resTree_nodeCheck:function(event,treeId,treeNode){
	var resTreeNodeChecded = $model.resTreeNodeChecded;&#xD;
	&#xD;
	if(angular.isUndefined(resTreeNodeChecded)){&#xD;
		resTreeNodeChecded = {};&#xD;
	}&#xD;
	var resId = treeNode.privilegeId;&#xD;
	var resName = treeNode.name;&#xD;
	var resChecked = treeNode.checked;&#xD;
	&#xD;
	if(treeNode.checkedOld==treeNode.checked){&#xD;
		delete resTreeNodeChecded[resId];&#xD;
	}else{		&#xD;
		resTreeNodeChecded[resId] = {&quot;id&quot;:resId,&quot;name&quot;:resName,&quot;resChecked&quot;:resChecked};&#xD;
	}&#xD;
	$model.resTreeNodeChecded = resTreeNodeChecded;
},&#xD;
// 所属机构改变&#xD;
orgId_change:function(newValue,oldValue){&#xD;
	if(angular.isUndefined(newValue) || newValue==&quot;&quot;){&#xD;
			return ;&#xD;
	}&#xD;
	$view.jobName.getDom().focus();	&#xD;
},
// 预定义值改变
preset_Field_change:function(newValue,oldValue){
	$model.resTreeNodeChecded = {};&#xD;
	$view.resTree.refresh2({&quot;presetId&quot;:newValue},true,false,false);&#xD;
}</form:scripts>
</form:Form>
